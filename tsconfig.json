{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "outDir": ".build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "rootDir": "./",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": [
        "./src/models/*"
      ],
      "@factories/*": [
        "./src/factories/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    }
  }
}